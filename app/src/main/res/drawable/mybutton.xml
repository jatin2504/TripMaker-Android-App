<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#4DBAF6" />
            <gradient android:angle="-90" android:startColor="#4DBAF6" android:endColor="#72D8FF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#4DBAF6" />
            <solid android:color="#4DBAF6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#4DBAF6" />
            <gradient android:angle="-90" android:startColor="#72D8FF" android:endColor="#4DBAF6" />
        </shape>
    </item>
</selector>